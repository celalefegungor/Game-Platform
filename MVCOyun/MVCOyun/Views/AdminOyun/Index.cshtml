@model List<MVCOyun.Models.EntityFramework.Oyun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="background-color:black;color:white;">
    <thead>
        <tr>
            <th>ID</th>
            
            <th>Oyun Adı</th>
            <th>Kategori</th>
            <th>Detay</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.id</td>
            
            <td>@item.Ad</td>
            <td>@item.Kategori.Ad</td>
            <td><a href="/AdminOyun/Detay/@item.id" class="btn btn-info"><i class="fa fa-inbox"> Detay</i></a></td>
            <td><a href="/AdminOyun/Guncelle/@item.id" class="btn btn-warning"><i class="fa fa-pencil"> Güncelle</i></a></td>
            <td><a href="/AdminOyun/Sil/@item.id" class="btn btn-danger"><i class="fa fa-trash-o"> Sil</i></a></td>

        </tr>
        }
    </tbody>
</table>
<div style="text-align:right">
    <a href="/AdminOyun/Yeni" class="btn btn-primary"><i class="fa fa-gamepad"></i> Yeni Oyun</a>
</div>


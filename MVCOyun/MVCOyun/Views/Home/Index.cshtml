        display: none;
        -webkit-transition: 0.6s ease-in-out left;
        -moz-transition: 0.6s ease-in-out left;
        -o-transition: 0.6s ease-in-out left;
        transition: 0.6s ease-in-out left;
    }
</style>
<br />
<br />
<div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active" >
            <img src="https://collectiveminds.ca/wp-content/uploads/gamepack-cod-black-ops-3.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item" >
            <img src="https://cdn.readyuplive.com/wp-content/uploads/2015/06/03214950/halo_hpa.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="http://livegamertv.com/wp-content/uploads/2017/09/pic3-large.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="http://www.uploadistribution.com/sow/assets/images/wallpaper.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://data1.origin.com/content/dam/originx/web/app/games/star-wars/star-wars-battlefront-2/last-jedi-content-update/star-wars-battlefront2_pdp_prefeature_1920x800_en_WW_Phasma.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://data2.origin.com/content/dam/originx/web/app/games/battlefield/battlefield-v/merch-requests/bfv_premieremodule_v4.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br />

@foreach (var item in Model)
{

    
    <div class="card mt-4">
        <img class="card-img-top img-fluid" src="@item.Foto" alt="">
        <div class="card-body">
            <h2 class="card-title">@item.Ad | <button type="button" class="btn btn-danger" data-toggle="popover" title="@item.Kategori.Ad" data-trigger="hover" data-placement="bottom" data-content=" @Html.Raw(item.Icerik.Substring(0,120))..">@item.Kategori.Ad</button>
            <h3>@item.Sirket <span style="font-size:20px;">/ <i class="fa fa-calendar"></i> @item.Tarih.Value.ToString("dd-MM-yyyy")</span></h3>
            <h4>Satış fiyatı -  <span class="badge badge-success">@item.Fiyat ₺</span> </h4>
            @if (item.Icerik.Length > 350)
            {
                <p class="card-text">
                    @Html.Raw(item.Icerik.Substring(0, 350)) ...<div class="spinner-border text-success" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </p>
            }
            else
            {
                <p class="card-text">@Html.Raw(item.Icerik)</p>
            }


            @if (item.Puan == 1)
            {
                <i class="fa fa-star"></i>
            }
            @if (item.Puan == 2)
            {
                <i class="fa fa-star"></i><i class="fa fa-star"></i>
            }
            @if (item.Puan == 3)
            {
                <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
            }
            @if (item.Puan == 4)
            {
                <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
            }
            @if (item.Puan == 5)
            {
                <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
            }
            @if (item.Puan == 6)
            {
                <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
            }
            @if (item.Puan == 7)
            {
                <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
            }
            @if (item.Puan == 8)
            {
                <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
            }
            @if (item.Puan == 9)
            {
                <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
            }
            @if (item.Puan == 10)
            {
                <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
            }
            / <span class="badge badge-info">Puan</span>
            <br />
            <br />
            <a href="/Home/Detay/@item.id" class="btn btn-success">Devamı..</a>

        </div>
    </div>
    <!-- /.card -->

    <!-- /.card -->


}
<div class="row">
    <div class="col-lg-7" style="text-align:center;padding-left:380px;">
        <div class="pagedList pagination-lg">
            @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }), PagedListRenderOptions.Minimal)
        </div>
    </div>
</div>
<script>
    $(function () {
        $('[data-toggle="popover"]').popover()
    });
      
        

</script>

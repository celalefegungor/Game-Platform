@using PagedList
@using PagedList.Mvc
@model IPagedList<MVCOyun.Models.EntityFramework.Oyun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
